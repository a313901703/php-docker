server {
    listen 80;
    listen [::]:80;

    # For https
    # listen 443 ssl;
    # listen [::]:443 ssl ipv6only=on;
    # ssl_certificate /etc/nginx/ssl/default.crt;
    # ssl_certificate_key /etc/nginx/ssl/default.key;

    server_name yourhosts;
    root /var/www/frontend/dist;
    index index.html index.htm;

    gzip on;
    gzip_vary on;
    gzip_static on;   //支持vue静态资源
    gzip_comp_level 6;
    gzip_buffers 16 8k;
    gzip_http_version 1.1;
    gzip_types text/plain text/css application/json application/x-javascript application/javascript text/xml application/xml application/xml+rss text/javascript image/jpeg image/gif image/png image/jpg;

    error_log /var/www/logs/coffee_front_error.log;
    access_log /var/www/logs/coffee_front_access.log;
}
